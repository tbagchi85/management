            <% else %>
                <%= link_to 'Register', new_user_registration_path %> <span style="color: #ffe45c;">|</span> <%= link_to 'Sign in', new_user_session_path %>
            <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>