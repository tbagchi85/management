<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container" style="margin-top: 30px;">
      <%= link_to "School Management System", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
                <span style="color: #ffe45c;">Welcome <%= current_user.email %> |</span>
