<script>
    $(function() {
        $( "#datepicker" ).datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd-mm-yy',
                yearRange: "1920:2012"

        });
    });
</script>
<%= javascript_include_tag :defaults, 'nested_form' %>
<h2 class="sub_header">Edit Profile</h2>
<div class="row">
  <div class="span6 offset3 form">
    <%= nested_form_for @profile, :url => profiles_path, :html => {:multipart => true} do |f| %>
        <%= f.label :initial %>
        <%= f.text_field :initial %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name%>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
        <%= f.label :parents_name %>
        <%= f.text_field :parents_name %>
        <%= f.label :gender %>
        <%= f.text_field :gender %>
        <%= f.label :dob %>
        <%= f.text_field :dob, :id => "datepicker" %><br/>

        <div class="span6 offset3 form">
          <%= f.fields_for @address, :url => profiles_path, :html => {:multipart => true} do |ff| %>
              <%= ff.hidden_field :type, :value => "permanent" %>
              <%= ff.label :street_1 %>
              <%= ff.text_field :street_1 %>
              <%= ff.label :street_2 %>
              <%= ff.text_field :street_2 %>
              <%= ff.label :city %>
              <%= ff.text_field :city %>
              <%= ff.label :state %>
              <%= ff.text_field :state %>
              <%= ff.label :country %>
              <%= ff.text_field :country %>
              <%= ff.label :pin_code %>
              <%= ff.text_field :pin_code %><br/>
              <%#= ff.submit "Create", class: "btn btn-small btn-primary", :address_create => true %>
              <%#= ff.link_to_remove "Remove Address" %>
          <% end %>
        </div>
    <%#= f.link_to_add "Add a Address", :addresses %>
  </div>
        <%= f.submit "Edit", class: "btn btn-small btn-primary" %>
 <% end %>
</div>
